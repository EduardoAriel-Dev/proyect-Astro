---
interface Props{
    id: string
    name: string
    img: string
    detail: string | null
    success: boolean | null
    flightNumber: number
}

const { id, name, img, detail, success, flightNumber} = Astro.props
const isSuccess = success ? 'Exito' : 'Fallo'
---

<a href=`/detail-launch/${id}`>
    <p class="flight_Number">NÂ° DE VUELO: {flightNumber}</p>
    <picture class="img">
        <img class="imgLaunch" src={img} alt={name}>
    </picture>
    <div class="infoLaunch">
        <h2 class="idLaunch">ID:#{id}</h2>
        <label>Detalle.</label>
        <p class="detailLaunch">{detail}</p>
        {success ? (<p class="success isSuccess">Tuvo Exito</p>):(<p class="success isFail">Fracaso</p>)}
    </div>
</a>

